@{
    ViewData["Title"] = "Companies";
}

<div class="container p-3">
    <div class="row pt-4 align-items-center pb-3">
        <div class="col-6">
            <h3 class="text-primary">Company List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="companiesTable" style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th>Postal Code</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/Company.js">
    </script>
}