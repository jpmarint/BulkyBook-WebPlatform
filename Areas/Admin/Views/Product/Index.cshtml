@{
    ViewData["Title"] = "Products";
}

<div class="container p-3">
    <div class="row pt-4 align-items-center pb-3">
        <div class="col-6">
            <h3 class="text-primary">Product List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="productsTable" style="width: 100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
                <th>Cover type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/Product.js">
    </script>
}